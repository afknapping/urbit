{
  "include": ["src"],
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "target": "es6",
    "module": "ES2015",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "jsx": "react",
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop": true
  }
}
